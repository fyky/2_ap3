<%= render 'books/error',book: @book %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info',user: current_user %>
      <h2>New book</h2>
      <%= render 'books/post',book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table>
          <tr>
            <th>images</th>
            <th>name</th>
            <th></th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.jpg") %></td>
            <td><%= user.name %></td>
            <td>
              <%=link_to "Show",user_path(user.id) %></td>
          <% end %>
          </tr>
        </table>

    </div>
  </div>
</div>